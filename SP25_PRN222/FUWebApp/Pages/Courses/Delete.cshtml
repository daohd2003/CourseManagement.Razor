@page
@model FUWebApp.Pages.Courses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<h3>Are you sure you want to delete this course?</h3>
<div>
    <h4>Course Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Course.Title</dd>

        <dt class="col-sm-2">Course Code</dt>
        <dd class="col-sm-10">@Model.Course.CourseCode</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Course.Category</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Course.Capacity</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.Course.CreatedAt</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Course.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="/Courses/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
